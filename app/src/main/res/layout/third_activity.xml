<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_logo_round"
        />

    <!-- Card A -->
    <RelativeLayout
        android:id="@+id/card_a"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_green_card">

        <!-- Green Circle -->
        <FrameLayout
            android:id="@+id/circle_a"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_green" />

            <TextView
                android:id="@+id/text_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Enter Button -->
        <Button
            android:id="@+id/btnEnterA"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Enter"
            android:backgroundTint="@android:color/black"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- Card B -->
    <RelativeLayout
        android:id="@+id/card_b"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/card_a"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_green_card">

        <!-- Green Circle -->
        <FrameLayout
            android:id="@+id/circle_b"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_green" />

            <TextView
                android:id="@+id/text_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="B"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Enter Button -->
        <Button
            android:id="@+id/btnEnterB"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Enter"
            android:backgroundTint="@android:color/black"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>
